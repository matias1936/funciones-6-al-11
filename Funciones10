
package funcionesdel6al11;


public class Funcionesdel6al11 {


public static void main(String[]args){
Scanner sc=new Scanner(System.in);
System.out.println("Introduzca a:");
int a=sc.nextInt();
System.out.println("Introduzca b:");
int b=sc.nextInt();

if(amigos(a,b)){
System.out.println("a+ "y" + b + " son amigos.");
} else {
System.out.println("No son amigos, la pr√≥xima vez pruebe con 220 y 284.");
}
}
static boolean amigos (int a, int b){
boolean amigos;

if(a== sumaDivisoresPropios(b)&&b== sumaDivisoresPropios(a)){
amigos =true;

}else{
amigos=false;
}
return (amigos);
}
static int sumaDivisoresPropios(int num){
int suma=0;
for (int i=1; i<num; i++){
if (num%i==0){
suma +=i;
}
}
return (suma);
}
}


